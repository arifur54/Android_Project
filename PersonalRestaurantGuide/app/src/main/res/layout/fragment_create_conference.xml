<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateConferenceFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/create_rest_details"
                android:layout_width="301dp"
                android:layout_height="68dp"
                android:layout_alignEnd="@+id/create_rest_name"
                android:layout_alignParentTop="true"
                android:layout_marginTop="211dp"
                android:layout_marginEnd="-4dp"
                android:ems="10"
                android:hint="Restaurant Details"
                android:inputType="textMultiLine"
                android:textAlignment="viewStart"
                tools:layout_editor_absoluteX="39dp"
                tools:layout_editor_absoluteY="262dp" />

            <Button
                android:id="@+id/create_rest_btn"
                android:layout_width="228dp"
                android:layout_height="54dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="89dp"
                android:background="@drawable/rounded_button_primary"
                android:text="Add Restaurant"
                android:textAllCaps="true"
                android:textColor="#efefef"
                tools:layout_editor_absoluteX="78dp"
                tools:layout_editor_absoluteY="396dp" />

            <EditText
                android:id="@+id/create_rest_name"
                android:layout_width="301dp"
                android:layout_height="44dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:ems="10"
                android:hint="Restaurant Name"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="26dp" />

            <EditText
                android:id="@+id/create_rest_address"
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:ems="10"
                android:hint="Restaurant Address"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="39dp"
                tools:layout_editor_absoluteY="102dp" />

            <EditText
                android:id="@+id/create_rest_tag"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="144dp"
                android:ems="10"
                android:hint="Food Tags"
                android:inputType="text"
                tools:layout_editor_absoluteX="39dp"
                tools:layout_editor_absoluteY="208dp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="302dp"
                android:numStars="5"
                android:progressTint="#FFD700"
                android:rating="1"
                android:stepSize="0" />

        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>